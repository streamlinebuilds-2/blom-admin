{
  "name": "Campaign",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "segment_tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "channel": {
      "type": "string",
      "enum": [
        "email",
        "whatsapp",
        "sms"
      ],
      "default": "email"
    },
    "subject": {
      "type": "string"
    },
    "body": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "scheduled",
        "sent"
      ],
      "default": "draft"
    },
    "scheduled_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "name",
    "channel"
  ]
}